{
  "manifest_version": 3,
  "name": "New Countdown Timer",
  "version": "1.1.0",
  "description": "Powerful browser countdown timer",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "notifications", "activeTab", "offscreen"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content/playSound.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sounds/*", "icons/*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
